    "def hex_output():\n",
    "    decnum = 0\n",
    "    hexnum = input('Enter a hex number to convert: ')\n",
    "    for power, digits in enumerate(reversed(hexnum)):\n",
    "        decnum += int(digits, 16) * (16**power)\n",
    "    print(decnum)"
   ]
